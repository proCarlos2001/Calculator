<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo2"
    android:padding="20dp">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        android:textSize="45sp"
        android:maxLines="4"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_above="@id/nums"
        tools:text="0"/>

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/on"
                android:text="ON"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num7"
                android:text="7"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num4"
                android:text="4"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num1"
                android:text="1"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <Button
                android:id="@+id/del"
                android:text="DEL"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/off"
                android:text="OFF"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num8"
                android:text="8"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num5"
                android:text="5"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num2"
                android:text="2"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num0"
                android:text="0"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ac"
                android:text="AC"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num9"
                android:text="9"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num6"
                android:text="6"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num3"
                android:text="3"
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/point"
                android:text="."
                android:padding="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cornerRadius="36dp"
                android:layout_margin="9dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="26dp"
                android:backgroundTint="@color/gray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                android:text="/"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <Button
                android:id="@+id/multi"
                android:text="X"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <Button
                android:id="@+id/suma"
                android:text="+"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <Button
                android:id="@+id/resta"
                android:text="-"
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

            <Button
                android:id="@+id/igual"
                android:text="="
                android:textColor="@color/white"
                android:textStyle="normal"
                style="@style/Button1"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>